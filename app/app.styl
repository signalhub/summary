@require '~rupture/rupture/index'
@require './fonts.styl'
@require './resolutions.styl'


*
	position relative
	box-sizing border-box

body {
	font-family: 'Open Sans', sans-serif;
	font-size: 12px;
	font-weight: 400;
	background-color: #313335;
}

#main {
	float: left;
	width 100%
}

#sidebar {
	position: absolute;
	padding: 1rem;
	top: 0;
	right: 0;
	z-index 100
}

#sequence {
	width: 150px;
	height: 70px;
}

#legend {
	padding: 10px 0 0 3px;
}

#sequence text, #legend text {
	font-weight: 600;
	fill: #313335;
}

#chart {
	position: relative;
	width: 100%;
	text-align: center;
}

#chart path {
	stroke: #313335;
}

#explanation {
	top: 170px;
	width: 140px;
	text-align: center;
	color: #666;
	z-index: 100;
	margin: 0 auto;
}

#percentage {
	font-size: 2.5em;
}

